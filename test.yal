module main;

func main(argc: i32, argv: [*][*]u8) i32 {
    var n: usize = 4;
    var arr = c_malloc(10 * n) as [*]i32;
    defer c_free(arr);

    var i = 0;
    while i < n {
        defer i = i + 1;

        arr[i] = i * 2;
    }

    var i = 0;
    while i < n {
        defer i = i + 1;

        c_printf("arr[%d] = %d\n".ptr, i, arr[i]);
    }

    return 0;
}

